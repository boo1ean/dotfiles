server {
	listen 0.0.0.0:80;
	server_name ____example.com;
	access_log ____/var/log/nginx/site.log;
	root ____/var/www/site;

	gzip on;
	gzip_http_version 1.1;
	gzip_vary on;
	gzip_comp_level 6;
	gzip_proxied any;
	gzip_types text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js;
	gzip_buffers 16 8k;
	gzip_disable "MSIE [1-6]\.(?!.*SV1)";

	location / {
		index index.html;
	}

	location /favicon.ico {
		alias ____/var/www/site/favicon.ico;
	}
}
